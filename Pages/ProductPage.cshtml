@page "/product/{id:int?}"
@model  ProductPageModel
@{
    var product = Model.product;
    var products = Model.productService.AllProducts();
}

<h1>@ViewData["Title"]</h1>

@if(product != null)
{
    <h2>@product.Name</h2>
    <p>Mo ta: @product.Description</p>
    <p>Gia: @product.Price</p>
}
